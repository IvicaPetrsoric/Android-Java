<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/munje_4"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.10"
        android:weightSum="1"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.05"
            />

        <Button
            android:id="@+id/buttonBackWorlds"
            android:layout_weight="0.35"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/back0"
            android:background="@null"
            android:textColor="#FFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:gravity="center|start" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.05"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.05"
        android:weightSum="1"
        >

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            />

        <ImageView
            android:layout_weight="0.2"
            android:src="@drawable/trenutni_igrac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/spremljenIgracSP"
            android:layout_weight="0.2"
            android:src="@drawable/kutija_igrac_c"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_weight="0.2"
            android:src="@drawable/trenutni_igrac2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.1"
        />


    <LinearLayout
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:weightSum="1"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.70"
            >

            <ListView
                android:focusableInTouchMode="true"
                android:background="#101020"
                android:choiceMode="singleChoice"
                android:listSelector="#009922"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listViewIgraca"
                android:dividerHeight="20dp"
                android:footerDividersEnabled="false"
                android:divider="@color/separator"
                android:padding="10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.1"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.10"
        android:weightSum="1"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            />

        <Button
            android:id="@+id/buttonSavePlayer"
            android:layout_weight="0.40"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/save0"
            android:background="@null"
            android:textColor="#FFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>







</LinearLayout>