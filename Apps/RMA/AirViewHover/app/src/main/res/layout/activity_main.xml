<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="hr.rma.sl.airviewhover.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/myview"
        android:layout_marginBottom="16dp"
        android:layout_weight="0.6">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Text: "
            android:id="@+id/textView"
            android:layout_gravity="bottom"
            android:background="#05f6fa" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:id="@+id/firstView"
        android:weightSum="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="q"
            android:layout_weight="0.1"
            android:id="@+id/button0" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="w"
            android:layout_weight="0.1"
            android:id="@+id/button1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="e"
            android:layout_weight="0.1"
            android:id="@+id/button2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="r"
            android:layout_weight="0.1"
            android:id="@+id/button3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="t"
            android:layout_weight="0.1"
            android:id="@+id/button4" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="y"
            android:layout_weight="0.1"
            android:id="@+id/button5" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="u"
            android:layout_weight="0.1"
            android:id="@+id/button6" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="i"
            android:layout_weight="0.1"
            android:id="@+id/button7" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="o"
            android:layout_weight="0.1"
            android:id="@+id/button8" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="p"
            android:layout_weight="0.1"
            android:id="@+id/button9" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:id="@+id/secondView"
        android:weightSum="1" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.05"
            android:id="@+id/emptyLeftSecondRow" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="a"
            android:layout_weight="0.1"
            android:id="@+id/button10" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="s"
            android:layout_weight="0.1"
            android:id="@+id/button11" />

        <!--If listener is defined in xml:-->
        <!--android:onClick="metoda"-->
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="d"
            android:layout_weight="0.1"
            android:id="@+id/button12" />

        <!--If listener is defined in xml:-->
        <!--android:onClick="metoda"-->
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="f"
            android:layout_weight="0.1"
            android:id="@+id/button13" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="g"
            android:layout_weight="0.1"
            android:id="@+id/button14" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="h"
            android:layout_weight="0.1"
            android:id="@+id/button15" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="j"
            android:layout_weight="0.1"
            android:id="@+id/button16" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="k"
            android:layout_weight="0.1"
            android:id="@+id/button17" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="l"
            android:layout_weight="0.1"
            android:id="@+id/button18" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.05"
            android:id="@+id/emptyRightSecondRow" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:id="@+id/thirdView"
        android:weightSum="1" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:id="@+id/emptyLeftThirdRow" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="z"
            android:layout_weight="0.1"
            android:id="@+id/button19" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="x"
            android:layout_weight="0.1"
            android:id="@+id/button20" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="c"
            android:layout_weight="0.1"
            android:id="@+id/button21" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="v"
            android:layout_weight="0.1"
            android:id="@+id/button22" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="b"
            android:layout_weight="0.1"
            android:id="@+id/button23" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="n"
            android:layout_weight="0.1"
            android:id="@+id/button24" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="m"
            android:layout_weight="0.1"
            android:id="@+id/button25" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="&lt;"
            android:layout_weight="0.15"
            android:id="@+id/button26" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:id="@+id/fourthView"
        android:weightSum="1" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:id="@+id/emptyLeftFourthRow" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="___"
            android:layout_weight="0.5"
            android:id="@+id/button27" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:id="@+id/emptyRightFourthRow" />
    </LinearLayout>

</LinearLayout>
