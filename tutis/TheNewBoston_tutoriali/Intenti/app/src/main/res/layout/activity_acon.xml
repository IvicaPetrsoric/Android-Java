<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ivica.intenti.acon"
    android:background="#72231F">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mrkač"
        android:id="@+id/Mrki_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mrkač gotov"
        android:id="@+id/button_view"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="povratak"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="asd"
        android:id="@+id/textView_2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button_view"
        android:layout_alignStart="@+id/button_view"
        android:layout_marginBottom="42dp"
        android:layout_toStartOf="@+id/button_view"
        android:layout_alignRight="@+id/button_view"
        android:layout_alignEnd="@+id/button_view" />
</RelativeLayout>
